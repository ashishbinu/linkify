{
  "manifest_version": 2,
  "name": "Linkify",
  "description": "An extension that automatically converts plain text URLs to clickable links",
  "version": "4.0",
  "author": "Ashish Binu",
  "browser_specific_settings": {
    "gecko": {
      "id": "ashishbinu.linkify@addons.thunderbird.net",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "messagesModify"
  ],
  "background": {
    "page": "background.html"
  },
  "icons": {
    "64": "icon-64px.png",
    "32": "icon-32px.png",
    "16": "icon-16px.png"
  }
}
